<div class="container-fluid">
    <div id="map" class="map row"></div>
</div>
<script src="http://maps.google.com/maps/api/js" type="text/javascript"></script>
<script type="text/javascript">
(function(){
    var map;
    function initMap() {
        var location = new google.maps.LatLng(34.1540995, -118.2582636);
        var marker = new google.maps.Marker({position: location, title:""});
        map = new google.maps.Map(document.getElementById("map"), {center: location, zoom: 14, scrollwheel: true});
        marker.setMap(map);
    }
    
    google.maps.event.addDomListener(window, 'load', initMap);
    google.maps.event.addDomListener(window, "resize", function() {
        var center = map.getCenter();
        google.maps.event.trigger(map, "resize");
        map.setCenter(center); 
    });
})();
</script>
